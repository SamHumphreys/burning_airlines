<p id="notice"><%= notice %></p>

<h1>Listing Aeroplanes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rows</th>
      <th>Columns</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aeroplanes.each do |aeroplane| %>
      <tr>
        <td><%= aeroplane.name %></td>
        <td><%= aeroplane.rows %></td>
        <td><%= aeroplane.columns %></td>
        <td><%= link_to 'Show', aeroplane %></td>
        <td><%= link_to 'Edit', edit_aeroplane_path(aeroplane) %></td>
        <td><%= link_to 'Destroy', aeroplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

